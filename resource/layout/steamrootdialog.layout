"resource/layout/steamrootdialog.layout"
{
    layout
    {
        region { name=bottom height=6 align=bottom }

        //Caption Buttons
        place { region=frame-controls control="frame_close" align=right width=40 height=60 }
        place { region=frame-controls control="frame_minimize, frame_maximize" align=right margin-right=40 width=30 height=60 }

        //Frame Grips
        place { control="frame_captiongrip" width=max height=60 }
        place { control="rightGrip" align=right width=3 height=max }
        place { control="frame_brGrip" region=bottom height=6 width=6 align=right }

        //Content
        place { control="UINavigatorPanel" width=max height=max x=1 margin-right=1 }

        //Avatar
        place { control="ParentalLockButton,account_balance,UIStatusPanel,InboxButton,view_friends" align=right width=30 height=60 margin-right=110 spacing=10 }

        //Controls
        place { control="MenuBar" region=top height=60 width=40 }

        // Support Alert
        place { control="SupportAlert" align=bottom width=max height=40 }

        // Hidden
        place { control="FriendPanel,friends_list,startvr,exitvr,fullscreen,account_URL,add_game,BigPictureBG,account_balance_seperator,universe_label,online_friends,New,ImageLogo" width=0 height=0 }
    }
}
