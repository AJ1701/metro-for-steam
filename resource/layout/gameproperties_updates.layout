"resource/layout/gameproperties_updates.layout"
{
    styles
    {
        CloudUsageLabelStyle:disabled
        {
            textcolor=White45
        }
    }

    layout
    {
        region { name=main margin=10 }

        place { controls="AutoUpdatesLabel,UpdateInfoText,UpdateCombo,UpdateNewsURL" region=main dir=down width=334 spacing=10 }

        place { controls="Divider1" region=main start=UpdateNewsURL dir=down width=max margin-top=10 }

        place { controls="BackgroundDownloadsLabel,BackgroundDownloadsInfo,BackgroundDownloadsCombo" region=main start=Divider1 dir=down width=334 spacing=8 margin-top=8 }

        place { controls="Divider2" region=main start=BackgroundDownloadsCombo dir=down width=max margin-top=10 }

        place { controls="CloudLabel" region=main start=Divider2 dir=down width=450 margin-top=10 }
        place { controls="CloudInfoLabel,EnableCloudCheck,CloudUsageLabel" region=main start=CloudLabel dir=down width=450 spacing=8 margin-top=10 }
        place { controls="CloudEnableLinkLabel" region=main start=CloudUsageLabel height=28 wrap=1 margin-left=-28 }
        place { controls="CloudEnableLinkLabelExtraText" region=main start=CloudEnableLinkLabel height=28 dir=right margin-left=4 wrap=1 margin-top=0 }
    }
}