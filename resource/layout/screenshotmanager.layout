"resource/layout/screenshotmanager.layout"
{
    styles
    {
        TextEntry
        {
            font-size=16
        }

        Label
        {
            textcolor=white75
        }

        ThumbnailSelected
        {
            render
            {
                // lines around
                1="fill( x0+2, y0, x1, y0 + 2, accent )"  // top
                2="fill( x0+2, y1-5, x1, y1-3, accent )"  // bottom
                3="fill( x0+2, y0, x0+4, y1-3, accent )"  // left
                4="fill( x1-1, y0, x1+1, y1-3, accent )"  // right

                //Triangle
                5="corner(x1-27,y0+2,x1-1,y0+3,accent)"
                6="image( x1-15, y0+2, x1, y0, graphics/check_sp )"
            }
        }

        ThumbnailUploaded
        {
        }

        CScreenshotImageClickPanel
        {
        inset-left=1
        render{}
        render_bg
        {
            0="fill( x0+1,y0+1,x1,y1-2, black25 )"  // top
        }
        }

        CScreenshotManager
        {
            minimum-height=600
            minimum-width=900
            render_bg
            {
                0="fill(x0, y0+39, x1, y0+40, white05)"
            }
        }

        DarkRegionDetails
        {
            bgcolor="none"
        }

        publishcaption
        {
            inset-top=4
            inset-left=4
            padding-right=30
            render_bg
            {
                0="fill(x0,y0,x1,y1+0,TextEntry)"
                1="image(x1-21,y0+1,x1,y1,steam/cached/icon_cloud_synced)"
            }
        }


        publishcaptionprompt
        {
            textcolor="111 111 111 255"
        }

        publishcharsleft
        {
        }

        publishcharsleft_toomanychars
        {
            textcolor="255 0 0 255"
        }

        gameselector
        {
            font-family=boldfont
            font-size=18
            font-style=uppercase
            render {}
            render_bg {}
            textcolor=white75
        }

        gameselector:hover
        {
            textcolor=white
        }

        ComboBoxButton
        {
            image=none
        }

        ScreenshotLoadingThrobber
        {
            minimum-width=100
            minimum-height=75
            bgcolor=black
        }

        LargeSelectionCount
        {
            font-size=60
            lightfont
            font-weight=300
        }

        NoSelectionTitle
        {
            font-family=lightfont
            font-size=32
            textcolor=white
        }

        NoSelectionInstructions
        {
            font-family=basefont
            font-size=16
        }
    }


    layout
    {
		place { control="frame_captiongrip" width=max height=40 }
        place { control="frame_minimize,frame_maximize,frame_close" align=right width=40 height=40 }

        region { name="selectorbar" margin-left=0 margin-right=340 margin-top=0 height=40 }
        place { control="selectorlabel" region="selectorbar" y=2 height=0 }
        place { control="game_selector" height=40 width=532 }

        region { name="details" align=right width=532 y=340 margin-left=10 margin-right=10 height=max }

        place {	control="grid" margin-top=40 margin-bottom=50 width=max margin-right=532 height=max }
        place { control="no_screenshots" width=0 height=0 }

        // Selected Screenshot Hero Image
        place { control="SSDetails" height=300 y=40 width=532 align=right }

        // Caption Box or Published Caption
        place { control="publish_caption" region="details" margin-top=10 height=80 width=max }
        place { control="details_caption" region="details" margin-top=10 height=80 width=max }

        place { control="publish_charsleft" align=right y=420 margin-top=20 height=20 width=512 margin-right=10 }
        place { control="SSDate,SSSize,SSSizeOriginal" y=420 margin-top=20 align=right margin-right=10 spacing=10 }

        region { name=details_footer region=details align=bottom height=50 }
        place { region=details_footer control="spoiler_checkbox,delete_button,details_button,publish_button" align=right y=10 height=30 spacing=10 }

        place { control="multiselect_button,view_local_library_button,view_screenshots" align=bottom x=10 margin-bottom=10 spacing=10 height=30 }

        region { name=multi_img_container width=532 align=right }
        place { region=multi_img_container control="multi_img" align="top-center" height=max }
        place { region=multi_img_container control="multi_img_count" align="top-center" height=max }
        place { region=multi_img_container control="multi_img_upload_size,multi_img_upload_size_info" y=120 align="top-center" spacing=5 height=max }
        place { region=multi_img_container control="multi_img_storage_remaining,multi_img_storage_remaining_info" y=160 align="top-center" spacing=5 height=max }
        place { region=details_footer control="multi_img_delete,multi_img_upload" y=260 align=bottom height=30 spacing=10 }

        place { control="file_not_loaded_label" region="details" y=140 align="top-center" }
        place { control="instr_no_selection_title,instr_no_selection" region="details" width=max margin-left=15 margin-right=15 dir=down spacing=16 }

        //Hidden
        place { control="no_screenshots,null_placer,multi_img_selected" width=0 height=0 }
    }
}
