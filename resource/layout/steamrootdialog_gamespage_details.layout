"resource/layout/steamrootdialog_gamespage_details.layout"
{
    styles
    {
        emptylisttext
        {
            textcolor="White"
            font-size="24"
            font-family=basefont
            render_bg {}
        }

        CGamesPage_Details
        {
            bgcolor="none"
            inset="0 0 0 0"
            render {}
            render_bg {}
        }

        "GamesPage_Details ListPanel"
        {
            bgcolor="none"
            render_bg {}
            render {}
        }

        "GamesPage_Details ListPanel"
        {
            inset-top=0
            padding-left=8
            padding-right=0
        }
        
        "GamesPage_Details ListPanelInterior"
        {
            bgcolor="none"
            inset="0 0 0 0"
            render {}
            render_bg {} 
            minimum-width=262
        }
        
        "GamesPage_Details ListPanelInterior:scrollbar"
        {     
            bgcolor=none			
            render_bg {}
            minimum-width=246
        }

        "GamesPage_Details ListPanelDragger"
        {
            bgcolor="none"
            render {}
            render_bg {}
        }

        "GamesPage_Details ListPanelColumnHeader"
        {
            bgcolor="none"
            font-size=14
            inset="0 0 0 0"
            render {}
            render_bg {}

        }

        rightcolumnheadertext
        {
            font-family=semibold
            font-style=uppercase
            font-weight=400
            font-size="18"
            textcolor="White"
        }
        
        rightcolumnheadertext-red
        {
            font-family=semibold
            font-style=uppercase
            font-weight=400
            font-size="18"
            textcolor="White"
        }

        rightcolumnheadertext-green
        {
            font-family=semibold
            font-style=uppercase
            font-weight=400
            font-size="18"
            textcolor="White"
        }

        rightcolumnheadertext-blue
        {
            font-family=semibold
            font-style=uppercase
            font-weight=400
            font-size="18"
            textcolor="White"
        }
        
        rightcolumnlink
        {
            //Large//font-size=20
            font-size=16
            font-style=regular
            textcolor=White50
            padding-left=8
            render
            {
                //Top
                0="fill(x0,y0,x1,y0+1,White05)"
            }
        }
        
        rightcolumnlink:hover
        {
            textcolor=White75
            render
            {
                //Top
                0="fill(x0,y0,x1,y0+1,White05)"
                1="fill(x0,y0+4,x1,y1-3,White05)"
            }
        }

        rightcolumntag
        {
            inset="0 0 0 0"
            font-size=16
            font-style=uppercase
            textcolor="White45"
            padding-left=0
            padding-top=0
            font-family=semibold
            padding-bottom=0
        }
        
        DetailsBorderPanel
        {
            bgcolor=none
            render {}
        }
        
        CGamesPage_Details
        {
            render_bg
            {
                0="fill( x0, y0-1, x1, y0, Black25 )"
                2="fill( x0, y0-39, x0+300, y1, White05 )"
            }
            render{}
        }
        
        headerimage{}

    }

    layout
    {
        region { name="details" y=0 x=300 width=max height=max overflow=scroll-vertical }

        //List
        place { control=GamesList width=300 height=max }

        //Empty List Text 
        place { control=emptylisttext x=300 margin-left=10 align=left-center width=max height=max }
        
        //Header
        place { control=gametitleheader region=details width=max align=left-center height=200 dir=down }

        //Panels
        region  { name="detailsbody" region=details y=200 width=max margin=10 overflow=allow-vertical }
        place { region=detailsbody control=gamesubheader,turnnotifications,friendsdetails,achievementsdetails,screenshotsdetails,communityfilesdetails,dlcdetails,clouddetails,newsdetails dir=down width=max spacing=10 }

        //Background Images
        place { control=headerimagea align=left margin-left=300 height=550 width=1024 }
        place { control=headerimageb align=left margin-left=300 height=550 width=1024 }

        //?
        place { control=DetailsBorder y=1 x=1 width=max height=max }
        
        //Hidden
        region { name=hidden width=1 overflow=none }
        place { control=welcomedetails,nonsteamdetails,linkslabel,sendguestpasslink,gamehublink,gamesubheaderright,achievementslink,forumlink,ogglink,manuallink,newslink,storelink,dlclink,cdkeylink,guidelink,guideslink,supportlink,recommendlink,tagslabel,*taglink,edittagslink region=hidden dir=down height=36 width=160 margin-top=0 align=right spacing=0 }

    }
}