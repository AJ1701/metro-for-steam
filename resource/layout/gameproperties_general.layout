"resource/layout/gameproperties_general.layout"
{
    styles
    {
        Label
        {
            font-size=24
            font-family=boldfont
            font-style=uppercase
            textcolor=white
        }
        LabelDull
        {
            font-family=basefont
            font-size=16
            textcolor=White45
        }
    }

    layout
    {
        region { name=main margin=10 }
        place { control=HomepageLabelName,HomePageLabel,DeveloperLabelName,DeveloperLabel,ManualLabelName,ManualLabel,NoManualLabel,Divider1 dir=down region=main height=24 }

        place {control=Divider1 start=ManualLabelName dir=down margin-top=8 region=main width=max }

        place { start=Divider1 controls=EnableOverlayCheck,EnableDesktopGameTheater,ExternalSignupLabel,ExternalSignupButton dir=down height=24 dir=down margin-top=8 spacing=0 width=max region=main }
        place { controls=LaunchOptionsButton,CreateDesktopShortcutButton align=bottom dir=right spacing=8 height=28 region=main }

        region { name=hidden margin-left=-9999 }
        place { region=hidden controls=FamilySharingUnsupportedLabel }
    }
}