"resource/layout/emailreminderbar.layout"
{
    styles
    {
        CEmailReminderBar
        {
            bgcolor="87 119 15 255"
            render {}
            render_bg
            {
                0="image( x0+12, y0+12, x1, y1, graphics/mail_h )"
            }
        }

        soft
        {
            textcolor="white"
        }

        bright
        {
            textcolor="white"
        }

        CloseStyle
        {
            bgcolor=none
            render_bg
            {
                0="image(x0+15,y0+15,x1,y1,graphics/metro/icons/caption/close)"
            }
        }

        CloseStyle:hover
        {
            render_bg
            {
                0="image(x0+15,y0+15,x1,y1,graphics/metro/icons/caption/close_h)"
                1="fill(x0,y0,x1,y1-1,White05)"
            }
        }

        CloseStyle:active
        {
            render_bg {
                0="image(x0+15,y0+15,x1,y1,graphics/metro/icons/caption/close_p)"
                1="fill(x0,y0,x1,y1-1,White10)"
            }
        }
    }

    layout
    {
        place { control="emailreminderbarlabel,emailreminderbaremail_email,emailreminderbar_yesbutton,emailreminderbar_nobutton,emailreminderbar_infolink" align=top-center margin-top=-1 height=40 spacing=8 }

        place { control="emailreminderbar_close" align=right width=40 height=40 margin-top=-1 margin-right=-1 }

        //Hidden

        place { control="emailreminderbar_info" width=0 height=0 }
    }

}
