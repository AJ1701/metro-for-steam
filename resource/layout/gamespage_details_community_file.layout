"resource/layout/gamespage_details_community_file.layout"
{
    colors
    {
        // The extra space needed vertical beyond the autocomputed size of the blurb contents
        // this is used in code to make the vertical size of the panel fit the title/author/morelink
        // and should be updated if you change vertical padding/margins/layout.
        GameDetailsCommunityFile.ExtraVerticalSpacing "107"
        GameDetailsCommunityFile.ExtraHorizontalSpacing "192"
        GameDetailsCommunityFile.MaxTooltipWidth "300"
        GameDetailsCommunityFile.MaxTooltipHeight "90"
    }

    styles
    {
        communityfile_name
        {
            font-size=16
            textcolor="White"
        }

        communityfile_image_border
        {
            bgcolor=black45
        }
    }

    layout
    {
        place { control=communityfile_name align=top-center y=8 margin-left=11 margin-right=11 }
        place { control=communityfile_image_border x=0 y=0 width=192 height=112 }
        place { control=communityfile_image x=0 y=0 width=192 height=108 }
        place { control=friendimage width=42 height=40 spacing=8 x=156 y=77 }
        place { control=communityfile_rating_image, communityfile_rating_image_background margin-left=-9999 width=0 height=0 }
    }
}
